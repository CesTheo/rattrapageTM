{% extends 'base.html.twig' %}

{% block title %}Hello EcoleController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Dans l'école {{ ecole.nom }}</h1>
    <h4>{{ecole.adresse}} dans la ville de  <a href="{{path('ville', {nom: ecole.ville.nom})}}">{{ ecole.ville.nom }}</a></h4>
    {# <img src="{{ecole.image}}" > #}
    <h3>Les étudiants qui compose l'école sont :</h3>
    {% for etudiant in ecole.etudiants %}
            <li>{{ etudiant.nom }} {{ etudiant.prenom }} née le {{ etudiant.datenaissance|date("m/d/Y") }}</li>
    {% endfor %}

</div>
{% endblock %}
